<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"
       card_view:cardElevation="10dp"
       card_view:cardUseCompatPadding="true" -->

    <android.support.v7.widget.CardView

        android:id="@+id/cv_bebidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bebida_foto"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/nombre_bebida"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:textSize="30sp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/descripcion_bebida"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp" />
                </LinearLayout>
            </ScrollView>


            <TextView
                android:id="@+id/precio_bebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_menos_bebida"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/btnMenos"
                    android:textColor="#FFF" />

                <EditText
                    android:id="@+id/txtCantidad_bebida"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:inputType=""
                    android:enabled="false"
                    android:textAlignment="center"
                    />

                <Button
                    android:id="@+id/btn_mas_bebida"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/btnMas"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/btn_agregar_orden_bebida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#FFF" />
            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>